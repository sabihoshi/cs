<Window x:Class="MusicPlayer.Views.MusicPlayerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicPlayer.Views"
        xmlns:models="clr-namespace:MusicPlayer.Models"
        mc:Ignorable="d"
        Title="MusicPlayerView" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>

        <Grid Column="1">
            <ListBox Grid.Row="1" Grid.Column="1"
                     x:Name="Images"
                     SelectedItem="{Binding Path=SelectedImage, Mode=OneWayToSource}" BorderBrush="{x:Null}">
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:AlbumModel}">
                        <Image Margin="3" MaxHeight="50" MaxWidth="50" Source="{Binding Source}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
        <Grid Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="20" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="20" />
            </Grid.ColumnDefinitions>

            <!--Styling-->
            <Grid.Resources>
                <Style TargetType="Button">
                    <Setter Property="MinWidth" Value="50" />
                    <Setter Property="Margin" Value="5" />
                </Style>
            </Grid.Resources>

            <!--Row 1-->
            <Button Grid.Row="1" Grid.Column="1"
                    x:Name="Track_PlayAudio"
                    Content="Open" />
            <Button Grid.Row="1" Grid.Column="2"
                    x:Name="PlayTrack"
                    Content="Play" />

            <!--Row 2-->
            <Slider Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3"
                    Minimum="0" Maximum="1"
                    Value="{Binding Path=CurrentVolume, Mode=TwoWay}" />

            <!--Row 3-->
            <Slider Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3"
                    Minimum="0" Maximum="{Binding Path=Track_GetPositionInSeconds, Mode=OneWay}"
                    Value="{Binding Path=Track_GetPositionInSeconds, Mode=TwoWay}" />
        </Grid>
    </Grid>
</Window>